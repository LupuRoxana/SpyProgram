package SpyProgram;

public class Paragraph {

	private String [] sir;
	
	public Paragraph(String [] sir) {
		
		sir = new String[0];
	}
	
	public boolean addWord(String s) {
		
		int n = sir.length;
		
		if(n < 1024) {
			
			int i;
			String[] frag = new String [n+1];
			for(i = 0; i < n; i++)
				
				frag[i] = sir[i];
				frag[n] = s;
				sir = frag;
				
			return true;	
			
		}
		return false;
		
	}
	
}
